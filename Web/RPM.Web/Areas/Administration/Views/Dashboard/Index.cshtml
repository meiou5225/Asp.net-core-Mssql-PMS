@model AdminDashboardViewModel

@{
    this.ViewData["Title"] = "Administration dashboard";
}

<h1 class="text-center text-info pb-lg-5">@this.ViewData["Title"]</h1>
<!--Settings: this.Model.SettingsCount-->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-info"
                         style="height:300px">
                        <div class="inner">
                            <h3>@Model.Users</h3>

                            <p>Users</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a asp-controller="Users"
                           asp-action="Index"
                           class="small-box-footer"
                           style="margin-top:157px">More info
                        <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-success"
                         style="height:300px">
                        <div class="inner">
                            <h3>@Model.Properties</h3>

                            <p>Listings</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a asp-controller="Listings"
                           asp-action="Index"
                           class="small-box-footer"
                           style="margin-top:157px">More info
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-warning"
                         style="height:300px">
                        <div class="inner">
                            <h3>@Model.Rentals</h3>

                            <p>Rentals</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a asp-controller="Rentals"
                           asp-action="Index"
                           class="small-box-footer"
                           style="margin-top:157px">More info
                        <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->