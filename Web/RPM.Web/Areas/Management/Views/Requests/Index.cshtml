                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Location</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Requests)
                                    {
                                        if (Model.Requests.Any())
                                        {
                                    <tr>
                                        <td class="col-1 py-1 px-3"
                                            style='vertical-align:middle'>
                                            @request.Date
                                        </td>
                                        <td class="col-1 py-1" style='vertical-align:middle'>
                                            <span class="badge badge-success">@request.Type</span>
                                        </td>
                                        <td class="col-1 py-1 px-1"
                                            style='text-align:center; vertical-align:middle'>
                                            @if (request.Status == NA)
                                            {
                                                <span class="text-secondary">N/A</span>
                                            }
                                            else if (request.Status == Approved)
                                            {
                                                <span class="text-success">
                                                    <i class="fas fa-check"></i>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">
                                                    <i class="fas fa-times"></i>
                                                </span>
                                            }
                                        </td>
                                        <td class="col-1 py-1 pl-1 pr-3"
                                            style='vertical-align:middle'>
                                            @request.FullName
                                        </td>
                                        <td class="col-1 py-1 pl-1 pr-3"
                                            style='vertical-align:middle'>
                                            @request.Username
                                        </td>
                                        <td class="col-2 py-1 pl-1 pr-3"
                                            style='vertical-align:middle'>
                                            @request.Email
                                        </td>
                                        <td class="col-2 py-1 pl-1 pr-3"
                                            style='vertical-align:middle'>
                                            @request.Phone
                                        </td>
                                        <td class="col-2 py-1 pl-1 pr-3"
                                            style='vertical-align:middle'>
                                            @request.Location
                                        </td>

                                        <td class="col-1 py-1 pl-0 pr-3" style='vertical-align:middle'>
                                            <a asp-controller="Requests"
                                               asp-action="Details"
                                               asp-route-Id="@request.Id"
                                               style="display:block; margin-bottom:-10px">
                                                <ion-icon size="large" name="list-outline"></ion-icon>
                                            </a>
                                        </td>
                                    </tr>
