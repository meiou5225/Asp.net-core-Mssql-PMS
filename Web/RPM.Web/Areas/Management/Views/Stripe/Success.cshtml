@model OwnerRequestsWithDetailsViewModel

@{
    this.ViewData["Title"] = "Requests Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://stripe-samples.github.io/developer-office-hours/demo.css" type="text/css" />

<h1 class="text-center text-info">@this.ViewData["Title"]</h1>
<!--Settings: this.Model.SettingsCount-->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <div id="main">
        <div id="checkout">
            <div id="payment-form">
                <h1>Success!</h1>
                <div>
                    Payment Status: <span id="payment-status"></span>
                </div>
                <a href="/">Restart Demo</a>
            </div>
        </div>
    </div>
    <script>
      var paymentStatus = document.getElementById('payment-status');
      var params = new URLSearchParams(window.location.search);
      fetch('/session-status?session_id=' + params.get('session_id')).then(function(r) {
        return r.json();
      }).then(function(response) {
        paymentStatus.innerText = response;
      });
    </script>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->