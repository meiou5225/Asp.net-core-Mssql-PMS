<!-- Main content -->
<section class="content">

    <div class="row d-flex">

        <div class="col-md-2 px-4">

            <div onclick="location.href='rentals/index'" class="shadow row p-3 mx-auto mt-4" style="background-color: #CCCCCC;cursor: pointer;">
                <a asp-controller="Payments"
                   asp-action="Index"
                   class="primary-btn px-1 bg-transparent">
                    Payments
                </a>
            </div>

            <div onclick="location.href='rentals/index'" class="shadow row p-3 mx-auto mt-4" style="background-color: #CCCCCC;cursor: pointer;">
                <a asp-controller="Rentals"
                   asp-action="Index"
                   class="primary-btn px-1 bg-transparent">
                    Rentals
                </a>
            </div>

        </div>

            <div class="col-md-10 pt-4 px-4">
                <!-- TABLE: PAYMENT REQUESTS -->
                <div class="shadow card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title text-info"><strong>Payments</strong></h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped m-0">
                                <thead>
                                    <tr>
                                        <th class="px-3">Date</th>
                                        <th>To</th>
                                        <th>Reason</th>
                                        <th style='text-align:center;vertical-align:middle'>Amount</th>
                                        <th style='text-align:center;vertical-align:middle'>Status</th>
                                        <th style='text-align:center;vertical-align:middle'>Details</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Payments.Any())
                                    {
                                        @foreach (var payment in Model.Payments)
                                        {
                                            <tr>
                                                <td class="col-2 py-1 pl-3 pr-1"
                                                    style='vertical-align:middle'>
                                                    @payment.Date
                                                </td>
                                                <td class="col-3 py-1 px-1"
                                                    style='vertical-align:middle'>
                                                    @payment.To
                                                </td>
                                                <td class="col-2 py-1 px-1"
                                                    style='vertical-align:middle'>
                                                    @payment.Reason
                                                </td>
                                                <td class="col-1 py-1 px-1"
                                                    style='text-align:center;vertical-align:middle'>
                                                    @payment.Amount
                                                </td>
                                                @if (payment.Status.ToString() == "Complete")
                                                {
                                                    <td class="col-1 py-1"
                                                        style='text-align:center;vertical-align:middle'>
                                                        <span class="text-success"><i class="fas fa-check"></i></span>

                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class="col-1 py-1 text-danger"
                                                        style='text-align:center;vertical-align:middle'>
                                                        Pending
                                                    </td>
                                                }

                                                <td class="col-1 py-1 pl-0 pr-1"
                                                    style='text-align:center;vertical-align:middle'>
                                                    <a asp-controller="Payments"
                                                       asp-action="Details"
                                                       asp-route-Id="@payment.Id"
                                                       style="display:block; margin-bottom:-10px">
                                                        <ion-icon size="large" name="list-outline"></ion-icon>
                                                    </a>
                                                </td>
                                                <td class="col-1 py-1 pl-0 pr-2"
                                                    style='text-align:center;vertical-align:middle'>
                                                    <div>
                                                        @if (payment.Status == PaymentStatus.Complete)
                                                        {
                                                            <a value="Paid"
                                                               asp-controller="Payment"
                                                               asp-action="Pay"
                                                               asp-route-Id="@payment.Id"
                                                               class="btn btn-sm btn-labeled btn-secondary disabled btn-block">
                                                                <span class="btn-label">
                                                                    <ion-icon class="pt-1" name="card-outline"></ion-icon>
                                                                </span>Paid
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a value="Pay"
                                                               asp-controller="Payment"
                                                               asp-action="Pay"
                                                               asp-route-Id="@payment.Id"
                                                               class="btn btn-sm btn-labeled btn-success btn-block">
                                                                <span class="btn-label">
                                                                    <ion-icon class="pt-1" name="card-outline"></ion-icon>
                                                                </span>Pay
                                                            </a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr class="col-12 py-1 px-3 text-secondary text-center"
                                            style='vertical-align:middle'>
                                            No payments for your rentals
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer row justify-content-between m-0 px-0">
                        <div class="col-12 pl-0 m-0" style="display: inline-block;">
                            <p class="text-right p-0 m-0 pr-3">
                                <a asp-controller="Payment" asp-action="All" class="btn btn-secondary">View All</a>
                            </p>
                        </div>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>

    </div>
    <div class="row">
        <div class="col-8 offset-2 pt-1 px-4">
            <!-- TABLE: RENTALS -->
            <div class="shadow card">
                <div class="card-header border-transparent">
