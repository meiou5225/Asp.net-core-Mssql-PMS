@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = this.Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <div class="row justify-content-center">
        <div id="cookieConsent"
             class="alert alert-info alert-dismissible fade show"
             role="alert"
             style="z-index:100;height:100px;position:fixed; top:auto; bottom:0;margin-left:auto;margin-right:auto;background-color:#0094ff99;text-align:center;border:none">
            We use cookies to understand how you use our site and to improve your experience.
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Learn More</a>.
            <button type="button" class="accept-policy close" data-dismiss="alert" aria-label="Close" data-cookie-string="@cookieString">
                &nbsp;
                <div class="row justify-content-center">
                    <h4 aria-hidden="true" style="margin-right:310px">Accept</h4>
                </div>
            </button>
        </div>
    </div>
    
    <script>
        (function () {
            var button = document.querySelector("#cookieConsent button[data-cookie-string]");
            button.addEventListener("click", function () {
                document.cookie = button.dataset.cookieString;
            }, false);
        })();
    </script>
}
